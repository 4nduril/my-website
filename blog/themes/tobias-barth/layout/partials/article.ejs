<article id="<%= post.slug %>" class="blog-post">
	<header class="blog-post-header">
	<% if (index) { %>
	<a class="blog-post-title-link" href="<%- url_for(post.path) %>">
	<% } %>
		<h2 class="blog-post-title"><%= post.title %></h2>
	<% if (index) { %>
	</a>
	<% } %>
	<p class="blog-post-date">Geschrieben am <time datetime="<%= date_xml(post.date) %>"><%= date(post.date) %></time></p>
	</header>
	<div class="blog-post-content">
		<%- post.content %>
	</div>
</article>
